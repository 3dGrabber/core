<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup Condition=" '$(WebSharperProject)' != '' Or '$(WebProjectOutputDir)' != '' " >
    <!-- Normalize project type -->
    <WebSharperProject Condition=" '$(WebSharperProject)' == '' ">Website</WebSharperProject>
    <WebSharperProject Condition=" '$(WebSharperProject)' == 'Site' ">Website</WebSharperProject>
    <WebSharperProject Condition=" '$(WebSharperProject)' == 'Web' ">Website</WebSharperProject>
    <WebSharperProject Condition=" '$(WebSharperProject)' == 'Export' ">Website</WebSharperProject>
    <WebSharperProject Condition=" '$(WebSharperProject)' == 'InterfaceGenerator' ">Extension</WebSharperProject>
    <!-- Normalize project output directory -->
    <WebSharperOutputDir>$(WebProjectOutputDir)</WebSharperOutputDir>
    <WebSharperOutputDir Condition=" '$(WebSharperProject)' == 'Html' and '$(WebSharperHtmlDirectory)' != '' ">$(WebSharperHtmlDirectory)</WebSharperOutputDir>
    <WebSharperOutputDir Condition=" '$(WebSharperProject)' == 'Bundle' and '$(WebSharperBundleOutputDir)' != '' ">$(WebSharperBundleOutputDir)</WebSharperOutputDir>
    <!-- Add compilation flags for wsfsc -->
    <OtherFlags>$(OtherFlags) --ws:"$(WebSharperProject)" --project:"$(MSBuildProjectFullPath)"</OtherFlags>
    <OtherFlags Condition=" '$(WebSharperOutputDir)' != '' ">$(OtherFlags) --wsoutput:"$(WebSharperOutputDir.TrimEnd('\'))"</OtherFlags>
    <OtherFlags Condition=" '$(WebSharperSourceMap)' == 'True' ">$(OtherFlags) --jsmap</OtherFlags>
    <OtherFlags Condition=" '$(WebSharperTypeScriptDeclaration)' == 'True' ">$(OtherFlags) --dts</OtherFlags>
    <OtherFlags Condition=" '$(WebSharperErrorsAsWarnings)' == 'True' ">$(OtherFlags) --wswarnonly</OtherFlags>
    <OtherFlags Condition=" '$(WebSharperDeadCodeElimination)' == 'False' ">$(OtherFlags) --dce-</OtherFlags>
    <OtherFlags Condition=" '$(WebSharperDownloadResources)' == 'True' ">$(OtherFlags) --dlres</OtherFlags>
    <OtherFlags Condition=" '$(WebSharperAnalyzeClosures)' != '' ">$(OtherFlags) --closures:$(WebSharperAnalyzeClosures)</OtherFlags>
    <!-- Use wsfsc as compiler instead of fsc -->
    <FscToolPath>$(MSBuildThisFileDirectory)/../tools</FscToolPath>
    <FscToolExe>wsfsc.exe</FscToolExe>
    <!-- Ensure TypeScript runs after WebSharper -->
    <CompileTypeScriptDependsOn>
      $(CompileTypeScriptDependsOn);
      CoreCompile;
    </CompileTypeScriptDependsOn>
  </PropertyGroup>
</Project>
