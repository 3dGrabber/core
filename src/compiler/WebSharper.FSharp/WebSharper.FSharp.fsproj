<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net461;netcoreapp2.0</TargetFrameworks>
    <OutputType>Exe</OutputType>
    <Name>wsfsc</Name>
    <Signed>False</Signed>
    <FSharpTool>True</FSharpTool>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="ErrorPrinting.fs" />
    <Compile Include="Program.fs" />
    <Content Include="wsfsc.cmd">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="wsfsc.sh">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <None Include="paket.references" />
  </ItemGroup>
  <Target Name="CopyToOutput" AfterTargets="Build;Publish">
    <PropertyGroup>
      <FSharpCoreFramework>netstandard1.6</FSharpCoreFramework>
      <FSharpCoreFramework Condition="$(TargetFramework.StartsWith('net4'))">net45</FSharpCoreFramework>
      <_BuildDestination>..\..\..\build\$(Configuration)\FSharp\netcoreapp2.0\publish</_BuildDestination>
      <_BuildDestination Condition="$(TargetFramework.StartsWith('net4'))">..\..\..\build\$(Configuration)\FSharp\net461</_BuildDestination>
    </PropertyGroup>
    <ItemGroup>
      <FSharpCoreExtraFiles Include="..\..\..\packages\FSharp.Core\lib\$(FSharpCoreFramework)\FSharp.Core.sigdata" />
      <FSharpCoreExtraFiles Include="..\..\..\packages\FSharp.Core\lib\$(FSharpCoreFramework)\FSharp.Core.optdata" />
    </ItemGroup>
    <Copy SourceFiles="@(FSharpCoreExtraFiles)" DestinationFolder="$(_BuildDestination)" />
  </Target>
  <ItemGroup>
    <ProjectReference Include="..\WebSharper.Compiler.FSharp\WebSharper.Compiler.FSharp.fsproj" />
    <ProjectReference Include="..\WebSharper.Core.JavaScript\WebSharper.Core.JavaScript.fsproj" />
    <ProjectReference Include="..\WebSharper.Compiler\WebSharper.Compiler.fsproj" />
    <ProjectReference Include="..\WebSharper.Core\WebSharper.Core.fsproj" />
    <ProjectReference Include="..\WebSharper.InterfaceGenerator\WebSharper.InterfaceGenerator.fsproj" />
  </ItemGroup>
  <Import Project="..\..\..\msbuild\FSharp.targets" />
  <Import Project="..\..\..\.paket\Paket.Restore.targets" />
</Project>
